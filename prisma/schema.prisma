generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id    Int    @id 
  Name String
  posts   Review[] 
}

model User {
  id Int @id @default(autoincrement())
  Username String
  Password String 
}


model Review {
  id       Int  @id @default(autoincrement())
  StoreId  Int
  Store   Store @relation(fields: [StoreId], references: [id])
  Name String
  Wine Int
  Beer Int
  Liquore Int
  Staff Int
  Member Boolean
  Question1 String
  Question2 String
  }


